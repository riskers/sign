{
  "extends": ["airbnb-base", "prettier", "react-app"],
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-uses-vars": 1,
    "no-tabs": 0,
    "class-methods-use-this": 0,
    "import/no-unresolved": 0,
    "indent": 0,
    "comma-dangle": 0,
    "semi": ["error", "always"],
    "import/prefer-default-export": 0,
    "react/sort-comp": 2
  },
  "plugins": [
    "react",
    "typescript",
    "prettier"
  ],
  "globals": {
    "document": true,
    "navigator": true,
    "window": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  }
}